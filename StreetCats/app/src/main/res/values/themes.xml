<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.StreetCats" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tertiaryColor</item>
        <item name="colorOnTertiary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorTertiary</item>
        <!-- Window background color. -->
        <item name="android:windowBackground">@color/backgroundLightColor</item>
    </style>

    <style name="Theme.StreetCats.Dark">
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorTertiary">@color/tertiaryDarkColor</item>
        <item name="android:windowBackground">@color/backgroundDarkColor</item>
    </style>

    <style name="Theme.StreetCats.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>